<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.appweather.ui.home.HomeFragment"
        android:label="Home">
        <action
            android:id="@+id/action_navigation_home_to_futureFragment"
            app:destination="@id/futureFragment" />
    </fragment>

    <fragment
        android:id="@+id/futureFragment"
        android:name="com.example.appweather.ui.home.FutureFragment"
        android:label="@string/next_5_days" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.appweather.ui.map.MapFragment"
        android:label="@string/title_map"
        tools:layout="@layout/fragment_map" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.appweather.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />
</navigation>